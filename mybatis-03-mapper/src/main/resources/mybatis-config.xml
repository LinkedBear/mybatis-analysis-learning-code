    </environments>

    <mappers>
        <mapper resource="mapper/department.xml"/>
        <mapper resource="mapper/user.xml"/>
        <mapper resource="mapper/test.xml"/>
        <mapper resource="mapper/dynamicSql.xml"/>
    </mappers>
</configuration>